<?xml version="1.0" encoding="utf-8"?><!--发起会话-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:padding="12dp">

    <EditText
        android:id="@+id/et_target"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/target_username"
        android:inputType="text"
        android:labelFor="@id/et_target" />

    <Button
        android:id="@+id/btn_create_conversation"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/selector_btn_create_conversation"
        android:text="@string/create_conversation" />

</LinearLayout>